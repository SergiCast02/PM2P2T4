<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:video="clr-namespace:Xam.Forms.VideoPlayer;assembly=Xam.Forms.VideoPlayer"
             x:Class="PM2P2T4.MainPage">

    <StackLayout>
        <video:VideoPlayer
            x:Name="videoPlayer"
            BackgroundColor="White"
            HorizontalOptions="Center"
            HeightRequest="300"/>

        <Entry Placeholder="Ingrese una descripción para guardar" Margin="30,10,30,0" x:Name="txtdescripcion"/>
        <Grid Margin="20,0,20,0">
            <Button Text="Grabar Video" Grid.Column="0" x:Name="btnGrabar" Clicked="btnGrabar_Clicked" HeightRequest="50" BackgroundColor="#EED56C" BorderColor="Black" BorderWidth="1" Margin="0,10,0,0"/>
            <Button Text="Guardar" Grid.Column="1" x:Name="btnSalvar" Clicked="btnSalvar_Clicked" HeightRequest="50" BackgroundColor="#EED56C" BorderColor="Black" BorderWidth="1" Margin="0,10,0,0"/>
            <Button Text="Listar Videos" Grid.Row="1" Grid.ColumnSpan="2" x:Name="btnlistarvideo" Clicked="btnlistarvideo_Clicked" HeightRequest="50" BackgroundColor="#EED56C" BorderColor="Black" BorderWidth="1" Margin="0,10,0,0"/>
        </Grid>
    </StackLayout>

</ContentPage>
